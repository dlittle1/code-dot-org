=form_for(@task, url: plc_task_path(@task)) do |f|
  .field
    = f.label :name
    = f.text_field :name
    = f.label :learning_module_id
    = f.select :plc_learning_module_id, options_for_select(options_for_plc_task_learning_modules, @task.plc_learning_module_id)
    = f.label :type
    = f.label @task.titleized_task_type
    = f.label :assignment_description
    = f.text_area :assignment_description
    = f.label :number_peer_reviews_needed
    = f.text_field :number_peer_reviews_needed

  .actions
    = f.submit 'Save'